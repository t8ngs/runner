{
  "name": "@t8ngs/runner",
  "description": "A simple yet powerful testing framework for Node.js",
  "version": "1.0.0",
  "engines": {
    "node": ">=18.16.0"
  },
  "main": "dist/index.js",
  "type": "module",
  "files": [
    "dist",
    "!dist/examples",
    "!dist/tests"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./types": "./dist/src/types.js",
    "./reporters": "./dist/src/reporters/main.js",
    "./plugins": "./dist/src/plugins/main.js",
    "./factories": "./dist/factories/main.js",
    "./core": "./dist/modules/core/main.js"
  },
  "scripts": {
    "pretest": "npm run lint",
    "test": "cross-env NODE_DEBUG=japa:runner c8 npm run quick:test",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "clean": "del-cli dist",
    "precompile": "npm run lint && npm run clean",
    "compile": "tsup-node && tsc --emitDeclarationOnly --declaration",
    "build": "npm run compile",
    "version": "npm run build",
    "prepublishOnly": "npm run build",
    "quick:test": "glob -c \"node --import=ts-node-maintained/register/esm --enable-source-maps --test-reporter=spec --test\" \"tests/*.spec.ts\"",
    "prepare": "husky",
    "commitlint": "commitlint --edit",
    "commit": "cz"
  },
  "devDependencies": {
    "@arapucajs/eslint-config": "^1.1.2",
    "@arapucajs/prettier": "^1.1.1",
    "@arapucajs/tsconfig": "^1.0.0",
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@swc/core": "^1.13.19",
    "@types/chai": "^5.2.2",
    "@types/ms": "^2.1.0",
    "@types/node": "^24.5.2",
    "c8": "^10.1.3",
    "chai": "^6.0.1",
    "commitizen": "^4.3.1",
    "cross-env": "^10.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "del-cli": "^7.0.0",
    "eslint": "^9.36.0",
    "glob": "^11.0.3",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "ts-node-maintained": "^10.9.6",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@poppinss/colors": "^4.1.5",
    "@poppinss/hooks": "^7.2.6",
    "@poppinss/string": "^1.7.0",
    "@t8ngs/core": "^1.1.2",
    "@t8ngs/show-screen-errors": "^1.0.2",
    "error-stack-parser-es": "^1.0.5",
    "fast-glob": "^3.3.3",
    "find-cache-directory": "^6.0.0",
    "getopts": "^2.3.0",
    "ms": "^2.1.3",
    "serialize-error": "^12.0.0",
    "slash": "^5.1.0",
    "supports-color": "^10.2.2"
  },
  "homepage": "https://github.com/t8ngs/runner#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/t8ngs/runner.git"
  },
  "bugs": {
    "url": "https://github.com/t8ngs/runner/issues"
  },
  "keywords": [
    "t8ngs",
    "tests",
    "test-runner"
  ],
  "author": "JefteCosta <jefteamorim@gmail.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "tsup": {
    "entry": [
      "./index.ts",
      "./src/types.ts",
      "./src/plugins/main.ts",
      "./src/reporters/main.ts",
      "./factories/main.ts",
      "./modules/core/main.ts"
    ],
    "outDir": "./dist",
    "clean": true,
    "format": "esm",
    "dts": false,
    "sourcemap": false,
    "target": "esnext"
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**",
      "tests_helpers/**",
      "dist/**",
      "factories/**",
      "modules/core/**",
      "src/reporters/**"
    ]
  },
  "prettier": "@arapucajs/prettier",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true"
    }
  }
}
